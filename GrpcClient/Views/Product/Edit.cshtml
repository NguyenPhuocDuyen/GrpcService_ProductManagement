@model MyProto.Product
<h1>Edit Product</h1>
<form asp-action="Edit" method="post">
    <div>
        <label asp-for="Id" class="col-form-label">Id</label>
        <input asp-for="Id" hidden class="form-control" />
        <input asp-for="Id" disabled class="form-control" />
    </div>
    <div>
        <label asp-for="CategoryId" class="col-form-label">Category Name</label>
        <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control"></select>
    </div>
    <div>
        <label asp-for="Name" class="col-form-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div>
        <label asp-for="Price" class="col-form-label">Price</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn btn-success">Edit</button>
        <a asp-action="Index" class="btn btn-primary">Back To List</a>
    </div>
</form>